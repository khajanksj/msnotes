<p id="notice"><%= notice %></p>

<h1>Course Tags</h1>

<table>
  <thead>
    <tr>
      <th>Course</th>
      <th>Subject</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @course_tags.each do |course_tag| %>
      <tr>
        <td><%= course_tag.course %></td>
        <td><%= course_tag.subject %></td>
        <td><%= course_tag.is_active %></td>
        <td><%= link_to 'Show', course_tag %></td>
        <td><%= link_to 'Edit', edit_course_tag_path(course_tag) %></td>
        <td><%= link_to 'Destroy', course_tag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

